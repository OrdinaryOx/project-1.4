<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MWG_Light"
    tools:context=".OptionsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <androidx.cardview.widget.CardView
        android:id="@+id/contact_CV"
        android:layout_width="175dp"
        android:layout_height="300dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_background"
        android:backgroundTint="#8acda1"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/contactTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/options_contact"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contactTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="@string/options_phone"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/clickPhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneNumberTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:onClick="dialPhoneNumber"
                android:text="@string/option_phoneNumber"
                android:textColor="@color/blue"
                android:textColorLink="@color/blue"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/clickPhoneTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/options_email"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/clickEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:autoLink="email"
                android:onClick="sendEmail"
                android:text="@string/option_emailLink"
                android:textColor="@color/blue"
                android:textColorLink="@color/blue"
                android:textSize="25sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/options_CV"
        android:layout_width="175dp"
        android:layout_height="300dp"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_background"
        android:backgroundTint="#8acda1"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/languageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/options_language"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/languageRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/languageTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/languageDutch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/language_Dutch"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/languageEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/language_english"
                    android:textSize="25sp"
                    android:translationY="-20dp" />

            </RadioGroup>

            <TextView
                android:id="@+id/themeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/languageRadioGroup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="@string/options_theme"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:translationY="-10dp" />

            <RadioGroup
                android:id="@+id/themeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/themeTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp">

                <RadioButton
                    android:id="@+id/light_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/options_themeLight"

                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/dark_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/options_themeDark"
                    android:textSize="25sp"
                    android:translationY="-20dp" />

            </RadioGroup>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verklaringCV"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/MWG_Dark"
        android:onClick="logout"
        android:padding="10dp"
        android:text="@string/options_logOut"
        android:textSize="22sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/privacyCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_CV"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:backgroundTint="#8acda1"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/PrivacySwitch"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/textForSwitchPrivacy"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:backgroundTint="#8acda1"
                android:scaleX="2"
                android:scaleY="2"
                android:thumbTint="@color/MWG_Dark"
                android:trackTint="@color/black" />

            <TextView
                android:id="@+id/phone_no"
                android:layout_width="144dp"
                android:layout_height="54dp"
                android:layout_below="@id/textForSwitchPrivacy"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="@string/options_phoneNo"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textForSwitchPrivacy"
                android:layout_width="375dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_background_top"
                android:backgroundTint="#8acda1"
                android:gravity="center_horizontal"
                android:text="@string/options_phoneTitle"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView39"
                android:layout_width="144dp"
                android:layout_height="54dp"
                android:layout_below="@id/textForSwitchPrivacy"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/custom_background_bottom_right"
                android:backgroundTint="#8acda1"
                android:gravity="center"
                android:text="@string/options_phoneYes"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/verklaringCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacyCV"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/Privacyverklaring"
                android:layout_width="375dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/custom_background"
                android:backgroundTint="#8acda1"
                android:clickable="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/options_link"
                android:textColor="@color/blue"
                android:textSize="25dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
